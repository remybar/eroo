{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Eroo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": false,
        },
        {
            "name": "Eroo tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "bookings"
            ],
            "django": true,
            "justMyCode": false,
        },
        {
            "name": "Eroo Celery",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "-A",
                "eroo",
                "worker",
                "-l",
                "info",
                "-P",
                "solo",
            ]
        }
    ]
}